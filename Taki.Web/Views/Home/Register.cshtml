
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-default/index.css">
    <style>
        .background-pic {
            /*background-image: url('../../Content/Images/gb.jpg');
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-size: cover;*/
            background-image: url('../../Content/Images/bg.png');
        }
    </style>
</head>
<body class="background-pic">
    <el-form id="form1" ref="form" v-bind:model="form" label-width="80px" style="width:400px; margin:100px auto;">
        <h1 style="text-align:center;">注册</h1>
        <el-form-item label="用户名">
            <el-input v-model="form.Name"></el-input>
        </el-form-item>
        <el-form-item label="密码">
            <el-input v-model="form.Password"></el-input>
        </el-form-item>
        <el-form-item label="昵称">
            <el-input v-model="form.Nickname"></el-input>
        </el-form-item>
        <el-form-item label="手机号">
            <el-input v-model="form.Phone"></el-input>
        </el-form-item>
        <el-form-item label="年龄">
            <el-input v-model="form.Age"></el-input>
        </el-form-item>
        <el-form-item label="性别">
            <el-select v-model="form.Sex" placeholder="请选择性别">
                <el-option label="男" value="1"></el-option>
                <el-option label="女" value="2"></el-option>
            </el-select>
        </el-form-item>
        <el-form-item label="性别">
            <el-radio-group v-model="form.Sex">
                <el-radio label="1">男</el-radio>
                <el-radio label="2">女</el-radio>
            </el-radio-group>
        </el-form-item>
        <el-form-item label="生日">
            <el-col v-bind:span="12">
                <el-date-picker type="date" placeholder="选择生日" v-model="form.birthday" style="width: 100%;"></el-date-picker>
            </el-col>
        </el-form-item>
        <el-form-item label="备注">
            <el-input type="textarea" v-model="form.desc"></el-input>
        </el-form-item>
        <el-form-item>
            <el-button type="primary" v-on:click="onSubmit">创建</el-button>
            <el-button>取消</el-button>
        </el-form-item>
    </el-form>

    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/element-ui/lib/index.js"></script>
    <script src="~/Content/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Scripts/customJS/ajaxConfig.js"></script>

    <script type="text/javascript">
        function getDefaultData() {
            return {
                Name: '',
                Password: '',
                Nickname: '',
                Phone: '',
                Age: '',
                Sex: '1',
                birthday: '',
                desc: ''
            };
        }

        var defaultData = getDefaultData();

        var form1 = new Vue({
            el: "#form1",
            data: { form: defaultData },
            methods: {
                onSubmit() {
                    var _this = this;
                    $.post("/Home/SaveRegister", JSON.stringify(form1.form), function (result) {
                        _this.$message({
                            message: result.Message,
                            type: 'success'
                        });
                        if (result.State == "SUCCESS")
                            _this.form = getDefaultData();
                    });
                }
            }
        });
    </script>

</body>
</html>
